<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
        <validators>
        <field name="user.email">
        <field-validator type="email">
        <message key="error.invalidemail"></message>
        </field-validator>
        </field>
        <field name="user.email">
        <field-validator type="requiredstring">
        <message key="error.requiredemail"></message>
        </field-validator>
        </field>
        <field name="user.mobile">
        <field-validator type="regex">
        <param name="regex"><![CDATA[([0-9]{10})]]></param>
        <message key="error.invalidmobile"></message>
        </field-validator>
        </field>
        <field name="user.mobile">
        <field-validator type="requiredstring">
        <message key="error.requiredmobile"></message>
        </field-validator>
        </field>
        <field name="user.username">
        <field-validator type="requiredstring">
        <message key="error.requireduser">
        </message>
        </field-validator>
        </field>
        <field name="user.password">
        <field-validator type="requiredstring">
        <message key="error.requiredpassword"></message>
        </field-validator>
        </field>
        </validators>